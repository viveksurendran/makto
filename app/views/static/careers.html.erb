<!-- careers page  -->

<!-- first row -->
<div class="row">
   <div class="col-lg-12 imageFullScreen">
                    <%= image_tag "bpm-page/bpmimage-makto.jpg", :class => 'img-responsive' %>
                    <!-- <div class="businessImageData">
                        <h3>BPM</h3>
                    </div> -->
   </div>
</div>
<!-- Second Row -->
<div class="row">
   <div class="col-lg-6 col-md-6 col-sm-6">
    
     <h2 class="text-center">JOB VACANY</h2>
      <% if @jobs.each do |job| %>
         <table class="jobVacancy">
               <tr>
                  <th>Job Title:</th>
                  <td><%= job.jobtitle %></td>
               </tr>
                <tr>
                   <th>Job Roles:</th>
                   <td><%= job.jobrole %></td>
                </tr>
                <tr>
                    <th>Job Responsibility:</th>
                    <td><%= job.jobresponsibility %></td>
                    <%= link_to 'delete', job , method: :delete %>
                </tr>
          </table>
       <% end.empty? %>
           <h6 style="color:red;" class="text-center">NO MORE VACANCY</h6>
        <% end %>
    
   </div>
   <div class="col-lg-6 col-md-6 col-sm-6">
          <%= render 'static/career_form' %>
           <!-- flash messages -->
            <% if flash[:notice] %>
                <div class="row">
                     <h6 style="color:green;"> <%= flash[:notice] %></h6>
                </div>
           <% end %>
   </div>
 </div>
